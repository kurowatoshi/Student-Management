<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <style>
        body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f8f9fa;
}

.d-flex {
    display: flex;
    min-height: 100vh; /* Makes sure the entire wrapper takes up the full height */
}

.sidebar {
    background-color: #0d6efd;
    color: white;
    width: 44vh;
    display: flex;
    flex-direction: column;
    min-height: 100vh; /* Ensures sidebar spans full height */
    padding-bottom: 1rem;
}

.sidebar h5, .sidebar p {
    margin: 0;
}

.sidebar a {
    text-decoration: none;
    color: white;
    padding: 10px 20px;
    transition: background-color 0.2s, color 0.2s;
}

.sidebar a:hover {
    background-color: #495057;
    color: #fff;
}

#page-content-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
}

header.border-bottom {
    background-color: white;
    border-color: white;
}

main.container-fluid {
    flex-grow: 1;
    padding: 2rem;
    background-color: #f8f9fa;
}

    </style>
</head>
<body>
    <div class="d-flex">
        <div class="sidebar p-4 mb-1">
            <div class="text-center mb-2 mt-1">
                <img src="~/images/admin.png" alt="Profile Picture" width="120" height="90" class="img-fluid rounded-circle mb-2">
                <h5>Mr.Quiros </h5>
                <p class="text">Admin</p>
            </div>
            <ul class="list-unstyled mt-2">
                <li><a href="#" class="btn btn-link w-100 text-start sidebar-button"><i class="fas fa-home"></i><span>Home</span></a></li>
                <li><a href="#" class="btn btn-link w-100 text-start sidebar-button"><i class="fas fa-book"></i><span>Course</span></a></li>
                <li><a href="#" class="btn btn-link w-100 text-start sidebar-button"><i class="fas fa-user-graduate"></i><span>Students</span></a></li>
                <li><a href="#" class="btn btn-link w-100 text-start sidebar-button"><i class="fas fa-dollar-sign"></i><span>Payment</span></a></li>
                <li><a href="#" class="btn btn-link w-100 text-start sidebar-button"><i class="fas fa-chart-line"></i><span>Report</span></a></li>
                <li><a href="#" class="btn btn-link w-100 text-start sidebar-button"><i class="fas fa-cog"></i><span>Settings</span></a></li>
                <li><a href="#" class="btn btn-link w-100 text-start sidebar-button"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a></li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <header class="border-bottom" style="background-color: white; border-color: white;">
                <div class="container-fluid py-3">
                    <h2 class="h3 mb-0 mt-4 text-center" s>Student Management</h2>
                </div>
            </header>
            <main class="container-fluid py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
